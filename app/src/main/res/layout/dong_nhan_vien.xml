<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutDongNhanVien"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="17dp"
    android:background="@color/background"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="4">

    <LinearLayout
        android:id="@+id/layoutNhanVien"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtRowNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nhân viên"
            android:textColor="#FFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtRowSDTNhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Nhân viên"
            android:textColor="#FFFF"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutActive"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btnRowActive"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_button4"
            android:gravity="center"
            android:text="Active"
            android:textColor="#FFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdmin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btnRowAdmin"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_button2"
            android:text="Admin"
            android:textColor="#FFFF"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>